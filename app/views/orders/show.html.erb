<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<p>
  <b><%= t('.name') %></b>
  <%= @order.name %>
</p>

<p>
  <b><%= t('.address') %></b>
  <%= @order.address %>
</p>

<p>
  <b><%= t('.email') %></b>
  <%= @order.email %>
</p>

<p>
  <b><%= t('.pay_type') %></b>
  <%= @order.pay_type %>
</p>
<% if @user.genre == "shopkeeper" %>
<p>
	<b><%= t('product') %></b>
	<table>
	<%= render @line_items %>
	</table>
</p>
<% end %>
<%= link_to t('.edit'), edit_order_path(@order) %> |
<%= link_to t('.back'), orders_path %>
<% if @user.genre != "ordinary" %>
 |
<%= link_to t('.shipped'), order_path(@order, shipped: "yes") %>
<% end %>
