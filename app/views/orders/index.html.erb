<h1><%= t('.order_list') %></h1>

<table>
  <tr>
    <th><%= t('.name') %></th>
    <th><%= t('.address') %></th>
    <th><%= t('.email') %></th>
    <th><%= t('.pay_type') %></th>
    <th><%= t('.shipped') %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.name %></td>
    <td><%= order.address %></td>
    <td><%= order.email %></td>
    <td><%= order.pay_type %></td>
    <td><%= order.shipped %></td>
    <td><%= link_to t('.show'), order %></td>
    <td><%= link_to t('.edit'), edit_order_path(order) %></td>
    <td><%= link_to t('.destroy'), order, method: :delete, data: { confirm: t('.sure_deleteï¼Ÿ') } %></td>
  </tr>
<% end %>
</table>

<br />
<% if @user.genre != "ordinary" %>
<%= link_to t('.new_order'), new_order_path %>
<% end %>
<% if @orders.class == ActiveRecord::Relation %>
<p><%= will_paginate @orders %></p>
<% end %>
