</div>
<div class="field">
<%= button_to t('.add_html'), line_items_path(product_id: @product), remote: true %>
</div>

<p style="border-bottom-style: dotted; overflow: hidden;"></p>

<% if @product.comments.any? %>
<div class="field">
<table>
	<tr>
		<th><%= t('.comments') %></th>
		<th><%= t('.poster') %></th>
		<th><%= t('.time') %></th>
	</tr>
	<%= render(@comments) %>
	
</table>
<p><%= will_paginate @comments %></p>
</div>
<% else %>
	<p>
		<b><%= t('.no_comments') %></b>
	</p>
<% end %>

<p style="border-bottom-style: dotted; overflow: hidden; border-color: #aaa"></p>

<div class="commentForm">
<%= render 'form' %>
</div>

