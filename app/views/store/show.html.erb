<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<%= image_tag(@product.image_url) %>
<div class="message">
<p>
  <b>Title:</b>
  <h3><%= @product.title %></h3>
</p>

<p>
  <b>Description:</b>
  <%= sanitize(@product.description) %>
</p>

<p>
  <b>Genre:</b>
  <%= @product.genre %>
</p>

<p>
  <b>Price:</b>
  <%= number_to_currency(@product.price) %>
</p>
</div>

<% if @product.comments.any? %>
<div class="field">
<table>
	<tr>
		<th><%= t('.comments') %></th>
		<th><%= t('.poster') %></th>
	</tr>
	<%= render(@product.comments) %>
	<tr>
		<td colspan='2'>
			<%= link_to t('.add_comment'), new_comment_path(product_id: @product.id) %>
		</td>
	</tr>
</table>
</div>
<% else %>
	<p>
		<b><%= t('.no_comments') %></b>
	</p>
<% end %>

<div class="field">
<%= button_to t('.add_html'), line_items_path(product_id: @product), remote: true %>
</div>
<%= link_to t('.back'), store_path %> 


