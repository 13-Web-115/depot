<p id="notice"><%= notice %></p>
<% end %>
<h1><%= t('.book_details')%></h1> <br />
<div class="message">
<%= image_tag(@product.image_url) %>
<p>
  <b class="title"><%= t('.title') %></b>
  <%= @product.title %>
</p>

<p>
  <b><%= t('.genre') %></b>
  <%= @product.genre %>
</p>

<p>
  <b><%= t('.price') %></b>
  <%= number_to_currency(@product.price) %>
</p>

<p>
  <b><%= t('.descriptions') %></b>
  <%= sanitize(@product.description) %>
</p>
<br />
