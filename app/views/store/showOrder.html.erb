<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<h1>Manage Your Cart</h1>
<br />
<p style="border-bottom-style: dotted; overflow: hidden"></p>
<br />
<fieldset>
<legend>Your Cart</legend>
<table class="manageCart">
	<th></th>
	<th>Books</th>
	<th>Num</th>
	<th> </th>
	<th>Price</th>
	<th></th>
	<% @cart.line_items.each do |item| %>
		<tr>
			<%= form_tag do %>
				<td>
					<%= text_field_tag 'id', nil, value: item.id, style: "display:none" %>
				</td>
				<td><%= item.product.title %></td>
				<td>
					<%= number_field_tag 'quantity', nil, value: item.quantity, min: 1, max: 100, size: 1 %>
				</td>
				<td>
					<%= submit_tag 'Update'%>
				</td>
			<% end %>
			<td><%= number_to_currency(item.total_price) %></td>
			<td><%= link_to 'Remove', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
	<% end %>
	<tr class="total_line">
		<td colspan="4">Total:</td>
		<td class="total_cell"><%= number_to_currency(@cart.total_price) %></td>
	</tr>
</table>
</fieldset>
<br />
<p style="border-bottom-style: dotted; overflow: hidden; border-color: #aaa"></p>
<br />
<div style="float:left; padding-right: 1em;"><%= button_to 'Confirm', new_order_path, method: :get %> </div>
<div>|  <%= link_to 'Continue Shopping', store_path %></div>
