<%= form_tag do %>
	<br />
	<p>Input Your Words Here:</p>
	<div class="field">
	<%= text_area_tag 'content' %>
	</div>
	
	<p>Input Your Name:</p>
	<div class="field">
	<%= text_field_tag 'person' %>
	</div>

	<p>Input Your Phone Number:</p>
	<div class="field">
	<%= text_field_tag 'phone' %>
	</div>
	
	<div style="float:left;"><%= submit_tag 'Send Message' %></div>
	
<% end %>