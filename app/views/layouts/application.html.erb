<!DOCTYPE html>
<html>
<head>
  <title>Pragmatic Books Online Store</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class='<%= controller.controller_name %>'>
	<div id="banner">
		<%= form_tag store_path, class: 'locale' do %>
			<%= select_tag 'set_locale',
				options_for_select(LANGUAGES, I18n.locale.to_s),
				onchange: 'this.form.submit()' %>
			<%= submit_tag 'submit'%>
			<%= javascript_tag "$('.locale input').hide()" %>
		<% end %>
		<div id="userMessage">
			<% if session[:user_id] %>
				<%= link_to t('.welcome') + " #{@user.name}!", edit_user_path(@user) %>
			<% end %>
		</div>
		<%= image_tag("logo.png") %>
		<%= @page_title || t('.title') %>
		<ul>
			<li> <a href="/"><%= t('.home') %></a> </li>
			<li> <a href="http://www.baidu.com"><%= t('.questions') %></a> </li>
			<li> <a href="http://www.google.com.hk"><%= t('.news') %></a> </li>
			<li> <a href="http://www.baidu.com"><%= t('.contact') %></a> </li>
			<% unless session[:user_id] %>
					<li> <%= link_to t('.login'), login_path %> </li>
			<% else %>
					<li> <%= link_to t('.logout'), logout_path, method: :delete %> </li>
			<% end %>
		</ul>
		<br />
	</div>
	<div id="columns">
		<div id="side">
			<%= form_tag store_path do %>
			<div id="search">
	 			<%= text_field_tag 'bookName', params[:bookName], size: 14%>
	 		</div>
	 		<div>
	 		<%= submit_tag "Search" %>
	 		</div>
	 		<% end %>
	 		
			<% if @cart %>
				<%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
					<%= render @cart %>
				<% end %>
			<% end %>
			
			<ul>
				<li id="menu" onClick="menus('menu1')"> <%= t('.category') %> </li> 
				<li id="menu1" style="display:none"> 				
					<div onClick="menus('menu1_2')"> <%= t('.art') %> </div> <br/> 
					<div id="menu1_2" style="display:none">
						<%= link_to t('.literature'), store_path(genre: "literature") %> <br />

					</div> <br />
					<div onClick="menus('menu1_3')"> <%= t('.youth') %> </div> <br />
					<div id="menu1_3" style="display:none">
						<%= link_to t('.literature'), store_path(genre: "literature") %> <br />

					</div> <br />
					<div onClick="menus('menu1_4')"> <%= t('.children') %> </div> <br />
					<div id="menu1_4" style="display:none">
						<%= link_to t('.children'), store_path(genre: "children") %> <br />

					</div> <br />
					<div onClick="menus('menu1_5')"> <%= t('.life') %> </div> <br />
					<div id="menu1_5" style="display:none">
						<%= link_to t('.life'), store_path(genre: "life") %> <br />
						
					</div> <br />
					<div onClick="menus('menu1_6')"> <%= t('.technology') %> </div> <br />
					<div id="menu1_6" style="display:none">
						<%= link_to t('.technology'), store_path(genre: "technology") %> <br />
						
					</div> <br />
					<div onClick="menus('menu1_7')"> <%= t('.education') %> </div> <br />
					<div id="menu1_7" style="display:none">
						<%= link_to t('.literature'), store_path(genre: "literature") %> <br />
						
					</div> <br />
					<div onClick="menus('menu1_8')"> <%= t('.management') %> </div> <br />
					<div id="menu1_8" style="display:none">
						<%= link_to t('.economy'), store_path(genre: "economy") %> <br />
						
					</div>
				</li> 
			</ul>
		
			<% if session[:user_id] %>
			<ul>
				<% if @user.genre == "ordinary"%>
					<li><%= link_to t('.my_orders'), orders_path %></li>
				<% end %>
				<% if @user.genre != "ordinary"%>
					<li><%= link_to t('.orders'), orders_path %></li>
					<li><%= link_to t('.products'), products_path %></li>
				<% end %>
				<% if @user.genre == "admin"%>
					<li><%= link_to t('.users'), users_path %></li>
					<li><%= link_to t('.comments'), comments_path %></li>
				<% end %>
			</ul>
			<% end %>
		</div>
		<div id="main">
			<%= yield %>
		</div>
	</div>
</body>
</html>
